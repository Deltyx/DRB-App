@page
<div class="container">
    <div class="row">
        <div class="col-8">
        </div>
        <div class="col-4">
            <div class="row mb-1">
                <div class="col-2">Message</div>
                <div class="col-4"><input type="text" id="messageInput" /></div>
            </div>
            <div class="row mb-1">
                <div class="col-6">
                    <input type="button" id="sendButton" value="Send Message" />
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-6">
                    <ul id="messagesList"></ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-12" id="debug">
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.min.js"></script>
<script>
    var drbConnection = new signalR.HubConnectionBuilder().withUrl("https://localhost:44373/drb").build();
    drbConnection.start().then(function() {
        document.getElementById("sendButton").disabled = false;
        document.getElementById("joinLobby").disabled = false;
        document.getElementById("createLobby").disabled = false;
    }).catch(function(err) {
        return console.error(err.toString());
    });
</script>
<script src="~/js/chat.js"></script>
<script src="~/js/lobby.js"></script>